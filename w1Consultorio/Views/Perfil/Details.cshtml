@model w1Consultorio.Models.Perfil
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Perfil</h3>
<p>
</p>
<fieldset>
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" role="form">
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Descricao)</label>
                </div>
                <div class="col-sm-10">
                    <label class="control-label">@Html.DisplayFor(model => model.Descricao)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Ativo)</label>
                </div>
                <div class="col-sm-10">
                    <label class="control-label">@if (Model.Ativo == "1")
                                                 {@Html.Raw("Sim");
                                                 }
                                                 else
                                                 {@Html.Raw("Não");
                                                 }</label>
                </div>
            </div>
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">Perfis Associados</label>
                </div>
                <div class="col-sm-10">
                    @foreach (var item in @Model.Transacao)
                    {
                        <span class="label label-default">@item.Descricao</span>
                    }
                </div>
            </div>
        </form>
        </div>
    </div>
</fieldset>
<p>
    <input type="button" class="btn btn-primary" value="Editar" onclick="location.href='@Url.Action("Edit", "Perfil", new { sistemaid = Url.RequestContext.RouteData.Values["sistemaid"], moduloid = Url.RequestContext.RouteData.Values["moduloid"], id = Model.CodPerfil })'" />
    <input type="button" class="btn btn-primary" value="Voltar" onclick="location.href='@Url.Action("Index", "Perfil", new { sistemaid = Url.RequestContext.RouteData.Values["sistemaid"], moduloid = Url.RequestContext.RouteData.Values["moduloid"] })'" />
</p>