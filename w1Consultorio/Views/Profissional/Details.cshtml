            </div>
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Observacao)</label>
                </div>
                <div class="col-sm-10">
                    <label class="control-label">@Html.DisplayFor(model => model.Observacao)</label>
