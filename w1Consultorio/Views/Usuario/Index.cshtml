@model IEnumerable<w1Consultorio.Models.Usuario>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
Usuários</h3>
@if (TempData["mensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["mensagemErro"]
    </div>
}
<br />
<p>
    <input type="button" class="btn btn-primary" value="Novo Usuário" 
        onclick="location.href='@Url.Action("Create", "Usuario")'"/>
</p>
<table class="table table stripped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataUltAcesso)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @(item.Ativo == "1" ? "Sim" : "Não") 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataUltAcesso)
        </td>
        <td>
            <div class="btn-group">
                <input type="button" class="btn btn-default" value="Editar" onclick="location.href='@Url.Action("Edit", "Usuario", new { id = item.CodUsuario })'" />
                <input type="button" class="btn btn-default" value="Detalhe" onclick="location.href='@Url.Action("Details", "Usuario", new { id = item.CodUsuario })'" />
                <input type="button" class="btn btn-default" value="Excluir" onclick="location.href='@Url.Action("Delete", "Usuario", new { id = item.CodUsuario })'" />
                <input type="button" class="btn btn-default" value="Perfis" onclick="location.href='@Url.Action("UsuarioPerfil", "Usuario", new { id = item.CodUsuario })'" />
                <input type="button" class="btn btn-default" value="Senha" onclick="location.href='@Url.Action("Senha", "Usuario", new { id = item.CodUsuario })'" />
            </div>
        </td>
    </tr>
}

</table>
