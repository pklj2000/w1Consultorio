@model w1Consultorio.Models.Modulo
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Módulo</h3>
<p>
</p>
<fieldset>
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" role="form">
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Nome)</label>
                </div>
                <div class="col-sm-10">
                    <label class="control-label">@Html.DisplayFor(model => model.Nome)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Descricao)</label>
                </div>
                <div class="col-sm-10">
                    <label class="control-label">@Html.DisplayFor(model => model.Descricao)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Sistema.CodRefSistema)</label>
                </div>
                <div class="col-sm-10">
                    <label class="control-label">@Html.DisplayFor(model => model.Sistema.CodRefSistema)</label>
                </div>
            </div>
            </form>
        </div>
    </div>
</fieldset>
<p>
    <input type="button" class="btn btn-primary" value="Editar" onclick="location.href='@Url.Action("Edit", "Modulo", new { sistemaid = Model.CodSistema, id = Model.CodModulo })'" />
    <input type="button" class="btn btn-primary" value="Voltar" onclick="location.href='@Url.Action("Index", "Modulo", new { sistemaid = Model.CodSistema })'" />
</p>
