@model w1Consultorio.Models.Exame
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Exame</h2>
<p>
</p>
<fieldset>
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" role="form">
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Descricao)</label>
                </div>
                <div class="col-sm-10">
                    <label class="control-label">@Html.DisplayFor(model => model.Descricao)</label>
                </div>
            </div>
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.EmiteSolExame)</label>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.EmiteSolExame)
                </div>
            </div>
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Ativo)</label>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Ativo)
                </div>
            </div>
            <div class="form-group">
                <div class="display-label">
                    <label class="col-sm-2 text-info">@Html.DisplayNameFor(model => model.Periodicidade)</label>
                </div>
                    @foreach (var item in @Model.Periodicidade)
                    {
                        <span class="label label-default">@item.Descricao</span>
                    }
            </div>
        </div>
    </div>
</fieldset>
<p>
    <input type="button" class="btn btn-primary" value="Editar" onclick="location.href='@Url.Action("Edit", "Exame", new { id = Model.CodExame })'" />
    <input type="button" class="btn btn-primary" value="Voltar" onclick="location.href='@Url.Action("Index", "Exame", new { id = Model.CodExame })'" />
</p>
