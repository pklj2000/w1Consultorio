@model w1Consultorio.Models.Exame
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>
    Exames</h3>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal" role="form">
                <div class="row">
                    <div class="form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">@Html.LabelFor(model => model.Descricao)</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Descricao)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">@Html.LabelFor(model => model.EmiteSolExame)</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(model => model.EmiteSolExameCheck)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="display-label">
                            <label class="col-sm-2 control-label">@Html.LabelFor(model => model.Ativo)</label>
                        </div>
                        <div class="col-sm-10">
                            @Html.CheckBoxFor(model => model.AtivoCheck)
                        </div>
                    </div>
                </div>
                </form>
                <div class="row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Periodicidade)
                    </div>
                    @{var i = 1;
                    }
                    @foreach (var item in ViewBag.Periodicidades)
                    {
                        if (i % 5 == 0)
                        {
                        @Html.Raw("</div><div class=row> <div class=col-sm-2></div>");
                        }
                        <div class="col-sm-2">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="selectedPeriodicidades" value=@item.CodPeriodicidade>
                                    @item.Descricao
                                </label>
                            </div>
                        </div>
                        i++;
                    }
                </div>
                <p>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    <input type="button" class="btn btn-primary" value="Cancelar" onclick="location.href='@Url.Action("Index", "Exame")'" />
                </p>
            </div>
        </div>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
