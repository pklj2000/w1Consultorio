@model w1Consultorio.Models.Transacao

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset>
    <h4> Confirma a exclusão da transação: @Html.DisplayFor(model => model.Descricao) ?</h4>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        @Html.HiddenFor(model => model.CodTransacao)
        <input type="submit" value="Excluir" class="btn btn-primary" />
        <input type="button" class="btn btn-primary" value="Cancelar" onclick="location.href='@Url.Action("Index", "Transacao", new { sistemaid = Model.Modulo.CodSistema, moduloid = Model.CodModulo })'" />
    </p>
}
